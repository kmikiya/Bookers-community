<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>

      <table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= attachment_image_tag(@group, :image, :fill, 100, 100, size: '40x40', fallback: "no_image.jpg") %></td>
        <td><%= @group.name %></td>
        <td><%= @group.introduction %></td>
        <td><% @group_users.each do |user| %>
              <%= user.user.name %><br><!--@group.idを持つ@group_userを選び出している。その中のuser_idを呼び出すために.userを付けるとuser_idの情報になる-->
            <% end %></td>
            <% if @group.owner_id != current_user.id %>
                <td>
                <% if GroupUser.where(user_id: current_user.id).exists? %>
                  <%= link_to "Leave this group", group_group_users_path(@group.id), method: :delete %>
                <% else %>
                  <%= link_to "Join this group", group_group_users_path(@group.id), method: :post %>
                <% end %></td>
             <% end %>
              <td><% if @group.owner_id == current_user.id %>
              <%= link_to "edit", edit_group_path(@group) %>
            <% end %></td>


      </tr>
  </tbody>
</table>

    </div>
  </div>
</div>
